<%= form_for Spree::User.new, as: :spree_user, url: spree.create_new_session_path do |f| %>
  <div id="password-credentials">
    <div class="row">
      <div class="col-12">
        <%= f.email_field :email, placeholder: 'Email', class: 'p-2 my-2 w-100', tabindex: 1, autofocus: true, autocomplete: 'false' %>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= f.password_field :password, placeholder: 'Password', class: 'p-2 my-2 w-100', tabindex: 2, autocomplete: 'false' %>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <%= f.check_box :remember_me, tabindex: 3%>
        <%= f.label :remember_me, I18n.t('spree.remember_me')%>
      </div>
      <div class="col-6 text-right">
        <%= f.submit I18n.t('spree.login'), class: 'continuebtn m-0', tabindex: 4 %>
      </div>
    </div>
  </div>
<% end %>
