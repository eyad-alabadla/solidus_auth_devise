<%= form_for Spree::User.new, as: :spree_user, url: spree.create_new_session_path do |login_form| %>
  <div id="password-credentials">
    <div class="row">
      <div class="col-12">
        <%= login_form.email_field :email, placeholder: 'Email', class: 'p-2 my-2 w-100', autofocus: true, autocomplete: "off" %>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= login_form.password_field :password, placeholder: 'Password', class: 'p-2 my-2 w-100', autocomplete: "off" %>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <%= login_form.check_box :remember_me%>
        <%= login_form.label :remember_me, I18n.t('spree.remember_me')%>
      </div>
      <div class="col-6 text-right">
        <%= login_form.submit I18n.t('spree.login'), class: 'continuebtn m-0' %>
      </div>
    </div>
  </div>
<% end %>
